{
  "manifest_version": 2,

  "name": "Twill",
  "description": "Message other people with this extension on Chrome",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Start messaging!"
  },

  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },

  "permissions": [
    "http://*/"
//    "clipboardRead",
//    "clipboardWrite"
  ]

}